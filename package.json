{
  "name": "dataform-lsp-vscode",
  "displayName": "Dataform tools",
  "publisher": "ashishalex",
  "icon": "media/images/dtools.png",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/ashish10alex/dataform-lsp-vscode.git"
  },
  "version": "0.0.12",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets",
    "Data Science",
    "Testing"
  ],
  "activationEvents": [
    "workspaceContains:**/*.sqlx",
    "onCommand:extension.enable",
    "onCommand:extension.disable",
    "onCommand:extension.runCurrentFile",
    "onCommand:extension.runCurrentFileWtDeps",
    "onCommand:extension.compileWtDryRun",
    "onCommand:extension.showCompiledQueryWtDryRun"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dataform-lsp-vscode.enable",
        "category": "Dataform",
        "title": "enable lsp"
      },
      {
        "command": "dataform-lsp-vscode.disable",
        "category": "Dataform",
        "title": "disable lsp"
      },
      {
        "command": "dataform-lsp-vscode.runCurrentFile",
        "category": "Dataform",
        "title": "Run current file",
        "icon": "$(play)",
        "group": "navigation"
      },
      {
        "command": "dataform-lsp-vscode.runCurrentFileWtDeps",
        "category": "Dataform",
        "title": "Run current file with dependencies",
        "icon": "$(debug-rerun)",
        "group": "navigation@1"
      },
      {
        "command": "dataform-lsp-vscode.compileWtDryRun",
        "category": "Dataform",
        "title": "Compile Dataform project followed by dry run",
        "icon": "$(sync)",
        "group": "navigation@0"
      },
      {
        "command": "dataform-lsp-vscode.showCompiledQueryWtDryRun",
        "category": "Dataform",
        "title": "Show compiled query in vertical split",
        "icon": "$(split-horizontal)",
        "group": "navigation@2"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "dataform-lsp-vscode.compileWtDryRun",
          "alt": "dataform-lsp-vscode.compileWtDryRun",
          "group": "navigation@0"
        },
        {
          "command": "dataform-lsp-vscode.runCurrentFileWtDeps",
          "alt": "dataform-lsp-vscode.runCurrentFileWtDeps",
          "group": "navigation@1"
        },
        {
          "command": "dataform-lsp-vscode.showCompiledQueryWtDryRun",
          "alt": "dataform-lsp-vscode.showCompiledQueryWtDryRun",
          "group": "navigation@1"
        },
        {
          "command": "dataform-lsp-vscode.runCurrentFile",
          "alt": "dataform-lsp-vscode.runCurrentFile",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
        "title": "Dataform",
        "properties": {
            "dataform-lsp-vscode.showCompiledQueryInVerticalSplitOnSave": {
                "type": "boolean",
                "default": false,
                "markdownDescription": "Shows compiled sql query on veritcal split when `.sqlx` file is saved"
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
